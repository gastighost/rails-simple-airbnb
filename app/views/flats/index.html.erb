<h1 class="m-3">All our flats</h1>

<div class="d-inline-flex p-2 justify-content-around flex-wrap">
<% @flats.each do |flat| %>
<div class="card m-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= flat.name %></h5>
    <h6 class="card-subtitle mb-2"><%= flat.address %></h6>
    <p class="card-text"><%= flat.description %></p>
    <div class="d-inline-flex">
      <div class="flex mx-1">
          <p>Capacity: <%= flat.number_of_guests %></p>
      </div>
      <div class="flex mx-2">
          <p>Price per night: <%= flat.price_per_night %></p>
      </div>
    </div>
  </div>
  <div class="d-inline-flex">
  <%= link_to 'More info', flat_path(flat),class: "btn btn-primary m-2" %>
  <%= link_to 'Edit', edit_flat_path(flat),class: "btn btn-warning m-2" %>
  <%= link_to "Delete",
                  flat_path(flat),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: 'btn btn-danger m-2' %>
  </div>
</div>
<% end %>
</div>
