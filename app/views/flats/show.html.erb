<div class="card my-1">
  <div class="card-body">
    <h2><%= @flat.name %></h2>
    <p><%= @flat.address %></p>
  </div>
</div>

<div class="card my-1">
  <div class="card-body">
    <h3>A bit more about this flat...</h3>
    <p><%= @flat.description %></p>
  </div>
</div>

<div class="card my-1">
  <div class="card-body">
    <h3>Details</h3>
    <p>Number of guests: <%= @flat.number_of_guests %></p>
    <p>Price per night: <%= @flat.price_per_night %></p>
  </div>
</div>

<%= link_to 'Edit this flat', edit_flat_path(@flat), class: 'btn btn-warning' %>

<%= link_to "Delete this flat",
                  flat_path(@flat),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
